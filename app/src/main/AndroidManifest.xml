<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.com.phro.flighter">

    <application
        android:name="br.com.phro.flighter.FlighterApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_flighter"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_flighter_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Flighter">

        <activity
            android:name="br.com.phro.flighter.ui.splash.SplashActivity"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="br.com.phro.flighter.ui.register.RegisterActivity" />

        <activity android:name="br.com.phro.flighter.ui.login.LoginActivity" />

        <activity
            android:name="br.com.phro.flighter.MainActivity"
            android:label="@string/app_name" />

    </application>

</manifest>